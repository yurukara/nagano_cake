<div class="container">
  <div class="row">
    <div class="col-12">
      <label class="h4 bg-light pr-3 pl-3 mt-3">ジャンル一覧・追加</label>
      <table class="table table-borderless mt-4" style="width: 50%">
        <%= form_with model: @genre, url: admin_genres_path, method: :post, local:true do |f| %>
        <tr>
          <td class="align-bottom mb-0" scope="col" style="width: 20%"><%= f.label :name, "ジャンル名" %></td>
          <td class="align-middle" scope="col" style="width: 20%"><%= f.text_field :name, placeholder: "ジャンル名" %></td>
          <td class="text-center" scope="col" style="width: 30%"><%= f.submit "新規登録", class: "btn btn-success" %></td>
        </tr>
        <% end %>
      </table>
      <div class="row">
        <table class="table mt-4" style="width: 400px">
          <thead class="bg-light">
            <tr class="text-center">
              <th scope="col" style="width: 250px">ジャンル</th>
              <th scope="col" style="width: 150px"></th>
            </tr>
          </thead>
          <tbody>
            <% @genres.each do |genre| %>
              <tr>
                <td><%= genre.name %></td>
                <td class="text-center"><%= link_to "編集する" , edit_admin_genre_path(genre.id), class: "btn btn-success btn-sm" %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>