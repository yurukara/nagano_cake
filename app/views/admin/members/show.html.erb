<div class="container ">
  <div class="row">
    <div class="col-8">
      <h2><%= "#{@member.last_name}#{@member.first_name}" %>さんの会員詳細</h2>
      <table>
        <tr>
          <td>会員ID</td>
          <td><%= @member.id %></td>
        </tr>
        <tr>
          <td>氏名</td>
          <td><%= "#{@member.last_name} #{@member.first_name}" %></td>
        </tr>
        <tr>
          <td>フリガナ</td>
          <td><%= "#{@member.last_name_kana} #{@member.first_name_kana}" %></td>
        </tr>
        <tr>
          <td>郵便番号</td>
          <td><%= @member.postal_code %></td>
        </tr>
        <tr>
          <td>住所</td>
          <td><%= @member.address %></td>
        </tr>
        <tr>
          <td>電話番号</td>
          <td><%= @member.phone_number %></td>
        </tr>
        <tr>
          <td>メールアドレス</td>
          <td><%= @member.email %></td>
        </tr>
        <tr>
          <td>会員ステータス</td>
          <td>
            <% if @member.is_deleted == false %>
              <span class="text-success">有効</span>
            <% elsif %>
              <span>退会</span>
            <% end %>
          </td>
        </tr>
      </table>
      <div>
        <%= link_to '編集する', edit_admin_member_path(@member), class: "btn btn-success" %>
        <%= link_to '注文履歴一覧を見る', admin_path, class: "btn btn-primary" %>
      </div>
    </div>
  </div>
</div>