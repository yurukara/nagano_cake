<div class="container">
  <div class="row">
    <div class="col-md-8">
      <h2>会員一覧</h2>
      <table class="table">
        <thead>
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @members.each do |member| %>
            <tr>
              <!--会員ID-->
              <td><%= member.id %></td>
              <!--会員名-->
              <td>
                <%= link_to "#{member.last_name} #{member.first_name}", admin_member_path(member) %>
              </td>
              <!--メールアドレス-->
              <td><%= member.email %></td>
              <!--会員ステータス-->
              <td>
                <% if member.is_deleted == false %>
                  <span class="text-success">有効</span>
                <% elsif %>
                  <span>退会</span>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>