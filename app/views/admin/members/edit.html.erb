<div class="container mx-auto">
  <div class="row mt-3">
    <div class="col-md-10 mx-auto">
      <label class=" h4 bg-light pr-3 pl-3"><%= "#{@member.last_name}#{@member.first_name}" %>さんの会員情報編集</label>
      <%= form_with model: @member, url: admin_member_path, method: :patch do |f| %>
        <table class="table table-borderless mt-3">
          <tr>
            <td scope="col" style="width: 20%">会員ID</td>
            <td scope="col" style="width: 30%"><%= @member.id %></td>
            <td scope="col" style="width: 30%"></td>
            <td scope="col" style="width: 10%"></td>
          </tr>
          <tr>
            <td class="align-middle">氏名</td>
            <td><%= f.text_field :last_name, autofocus: true, class: "form-control" %></td>
            <td><%= f.text_field :first_name, autofocus: true, class: "form-control" %></td>
          </tr>
          <tr>
            <td class="align-middle">フリガナ</td>
            <td><%= f.text_field :last_name_kana, autofocus: true, class: "form-control" %></td>
            <td><%= f.text_field :first_name_kana, autofocus: true, class: "form-control" %></td>
          </tr>
          <tr>
            <td class="align-middle">郵便番号</td>
            <td><%= f.text_field :postal_code, class: "form-control" %></td>
          </tr>
          <tr>
            <td class="align-middle">住所</td>
            <td colspan="3"><%= f.text_field :address, class: "form-control" %></td>
          </tr>
          <tr>
            <td class="align-middle">電話番号</td>
            <td><%= f.text_field :phone_number, class: "form-control" %></td>
          </tr>
          <tr>
            <td class="align-middle">メールアドレス</td>
            <td><%= f.text_field :email, class: "form-control" %></td>
          </tr>
          <tr>
            <td class="align-middle">会員ステータス</td>
            <td>
              <%= f.radio_button :is_deleted, false %>
              <%= f.label :is_deleted, '有効' %>
              <%= f.radio_button :is_deleted, true %>
              <%= f.label :is_deleted, '退会' %>
            </td>
          </tr>
          <tr>
            <td></td>
            <td><%= f.submit '変更を保存',  class: "btn btn-success" %></td>
          </tr>
        </table>
      <% end %>
    </div>
  </div>
</div>