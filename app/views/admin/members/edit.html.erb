<div class="container">
  <div class="row">
    <div class="col-md-10">
      <h2><%= "#{@member.last_name}#{@member.first_name}" %>さんの会員情報編集</h2>
      <%= form_with model: @member, url: admin_member_path, method: :patch do |f| %>
        
        <div>
          <label>会員ID</label>
          <%= @member.id %>
        </div>
        
        <div class="form-group">
          <label>氏名</label>
          <%= f.text_field :last_name, autofocus: true %>
          <%= f.text_field :first_name, autofocus: true %>
        </div>

        <div class="form-group">
          <label>フリガナ</label>
          <%= f.text_field :last_name_kana, autofocus: true %>
          <%= f.text_field :first_name_kana, autofocus: true %>
        </div>

        <div class="form-group">
          <label>郵便番号</label>
          <%= f.text_field :postal_code %>
        </div>

        <div class="form-group">
          <label>住所</label>
          <%= f.text_field :address %>
        </div>

        <div class="form-group">
          <label>電話番号</label>
          <%= f.text_field :phone_number %>
        </div>

        <div class="form-group">
          <label>メールアドレス</label>
          <%= f.text_field :email %>
        </div>

        <div class="radio">
          <%= f.radio_button :is_deleted, false %>
          <%= f.label :is_deleted, '有効' %>
          <%= f.radio_button :is_deleted, true %>
          <%= f.label :is_deleted, '退会' %>
        </div>
        
        <div>
          <%= f.submit '変更を保存',  class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>