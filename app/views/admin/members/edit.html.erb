<div class="container mx-auto">
  <%= render "admin/admin/shared/error_messages", resource: @member %>
  <div class="row mt-3">
    <div class="col-md-10 mx-auto ">
      <label class=" h4 bg-light pr-3 pl-3"><%= "#{@member.last_name}#{@member.first_name}" %>さんの会員情報編集</label>
      <%= form_with model: @member, url: admin_member_path, method: :patch do |f| %>
        <table class="table table-borderless mt-3 bg-light">
          <tr>
            <td scope="col" style="width: 20%">会員ID</td>
            <td scope="col" style="width: 30%"><%= @member.id %></td>
            <td scope="col" style="width: 30%"></td>
            <td scope="col" style="width: 10%"></td>
          </tr>
          <%= render 'edit', f: f %>
          <tr>
            <td class="align-middle">会員ステータス</td>
            <td>
              <%= f.radio_button :is_deleted, false %>
              <%= f.label :is_deleted, '有効' %>
              <%= f.radio_button :is_deleted, true %>
              <%= f.label :is_deleted, '退会' %>
            </td>
          </tr>
          <tr>
            <td></td>
            <td><%= f.submit '変更を保存',  class: "btn btn-success" %></td>
          </tr>
        </table>
      <% end %>
    </div>
  </div>
</div>