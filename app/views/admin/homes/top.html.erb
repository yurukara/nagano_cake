<div class="container mt-3">
  <div class="row mx-auto">
    <div class="col-md-12 mx-auto">
      <label class="h4 bg-light pr-3 pl-3">注文履歴一覧</label>
      <table class="table mt-3">
        <thead>
          <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
            <tr>
              <!--order.rbで記載したset_dateで日時を表示できる-->
              <td><%= order.set_date %></td>
              <td><%= order[member.last_name + member.first_name] %></td>
              <td><%= order.order_items.quantity %></td>
              <td><%= order.order_status %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div> 
  </div>
</div>