<div class="container mx-auto">
  <h3 class="">商品編集</h3>
  <div class="row mx-auto mt-3">
    <div class= "col">
      <%= form_with model: @item, url: admin_item_path(@item), method: :patch do |f| %>
      <%= render "admin/admin/shared/error_messages", resource: @item %>
      <table class="table-borderless">
         <tr>
           <th><%= f.label :image, '商品画像' %></th>
           <td> <%= f.file_field :image, accept: "image/*" %></td>
         </tr>
         <tr>
           <th><%= f.label :name, '商品名' %></th>
           <td><%= f.text_field :name %></td>
         </tr>
         <tr>
           <th><%= f.label :introduction, '商品説明' %></th>
           <td><%= f.text_area :introduction, rows: "5" %></td>
         </tr>
         <tr>
           <th><%= f.label :genre_id, 'ジャンル' %></th>
           <td><%= f.collection_select :genre_id, Genre.all, :id, :name,{prompt: "選択してください"} %></td>
         </tr>
         <tr>
           <th><%= f.label :price, '税抜価格' %></th>
           <td> <%= f.number_field :price %>円</td>
         </tr>
         <tr>
           <td>
             <%= f.label :is_active, '販売ステータス' %>
             <%= f.radio_button :is_active, true %>
             <%= f.label :is_active, '販売中', value: true %>
             <%= f.radio_button :is_active, false %>
             <%= f.label :is_active, '販売停止中', value: false %>
           </td>
         </tr>
      </table>
      <div>
        <%= f.submit '変更を保存', class: "btn btn-success" %>
      </div>
      <% end %>
    </div>
  </div>
</div>
