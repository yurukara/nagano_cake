<div class="container">
   <div class="row">
     <div class="col-12">
         <label class="h4 bg-light pr-3 pl-3">商品新規登録</label>
          <table class="table mt-3 text-center">
            <div>
              <%= form_with model: @item, url: admin_items_path, method: :post, local: true do |f| %>
                <%= render "admin/admin/shared/error_messages", resource: @item %>
                <tr>
                  <th><%= f.label :image, '商品画像' %></th>
                  <td><%= f.file_field :image, accept: "image/*" %></td>
                </tr>
            
                <tr>
                  <th><%= f.label :name, '商品名' %>
                  <%= f.text_field :name %>
                </tr>
            
                <tr>
                  <th><%= f.label :introduction, '商品説明' %>
                  <%= f.text_area :introduction, rows: "5" %>
                </tr>
            
                <tr>
                  <th><%= f.label :genre_id, 'ジャンル' %>
                  <%= f.collection_select :genre_id, Genre.all, :id, :name,{prompt: "選択してください"} %>
                </tr>
            
                <tr>
                  <th><%= f.label :price, '税抜価格' %>
                  <%= f.number_field :price %>円
                </tr>
            
                <tr>
                  <%= f.label :is_active, '販売ステータス' %>
                    <%= f.radio_button :is_active, true %>
                    <%= f.label :is_active, '販売中', value: true %>
                    <%= f.radio_button :is_active, false %>
                    <%= f.label :is_active, '販売停止中', value: false %>
                 </tr>
            
                <%= f.submit '新規登録' %>
              <% end %>
            
            </div>
          </table>
    </div>
  </div>
</div>

