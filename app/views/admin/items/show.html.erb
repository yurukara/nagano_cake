<div class="container mx-auto">
  <h4>商品詳細</h4>
  <div class="row mx-auto">
    <div>
  　<div class="col-md-5 mx-auto">
      <%= image_tag @item.get_item_image(200,150) %>
    </div>
    </div>
    <div class='col-md-7  mx-auto'>
      <table class="table-borderless">
         <tr>
           <th>商品名</th>
           <td><%= @item.name %></td>
        　</tr>
         <tr>
           <th>商品説明</th>
           <td><%= @item.introduction %></td>
         </tr>
         <tr>
           <th>ジャンル</th>
           <td><%= @item.genre.name %></td>
         </tr>
         <tr>
           <th>税込価格<br>(税抜価格)</th>
           <td><%= @item.with_tax_price.to_s(:delimited) %> ( <%= @item.price.to_s(:delimited) %>)円</td>
         </tr>
         <tr>
           <th>販売ステータス</th>
           <td>
            <% if @item.is_active == true %>
             <span class="text-success font-weight-bold">販売中</span>
            <% else %>
             <span class="text-secondary font-weight-bold">販売停止中</span>
            <% end %>
           </td>
         </tr>
      </table>
      <div>
        <%= link_to '編集する', edit_admin_item_path(@item.id), class: "btn btn-success" %>
      </div>
    </div>
  </div>
</div>

