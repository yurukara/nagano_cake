<div class="container">
  <div class="row mt-5 ml-5 mb-4">
    <h4 class="bg-light">管理者ログイン</h4>

  </div>

  <div class="col">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group row mt-4">
          <label class="col-sm-2 col-form-label offset-sm-2">メールアドレス</label>
          <div class="col-sm-5">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
          </div>
        </div>


        <div class="form-group row mt-4">
          <label class="col-sm-2 col-form-label offset-sm-2">パスワード</label>
          <div class="col-sm-5">
            <%= f.password_field :password, autocomplete: "current-password", class:"form-control" %>
          </div>
        </div>

        <div class="text-center">
          <%= f.submit "ログイン", class:"btn btn-primary w-50" %>
        </div>
      <% end %>

      <%= render "admin/admin/shared/links" %>
  </div>

</div>
