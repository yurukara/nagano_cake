<div class="container">
  <div class="row mt-5 ml-5 mb-4">
    <h4 class="bg-light pl-3 pr-3">ログイン</h4>
    <%= flash[:notice] %>
  </div>

  <div class="row ml-5 mb-3">
    <div class="col-sm-1"></div>
    <h5 class="bg-light pl-3 pr-3">会員の方はこちらからログイン</h5>
  </div>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="form-group row mt-4">
    <label class="col-sm-2 col-form-label offset-sm-2">メールアドレス</label>
    <div class="col-sm-5">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'sample@example.com', class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <label class="col-sm-2 col-form-label offset-sm-2">パスワード</label>
    <div class="col-sm-5">
       <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
    </div>
  </div>

  <div class="row mt-5">
    <div class="col-sm-8 mx-auto">
      <div class="text-center">
      <%= f.submit "ログイン", class:"btn btn-primary w-50" %>
      </div>
    </div>
  </div>

  <% end %>

  <div class="row mt-5 ml-5 mb-2">
    <div class="col-sm-1"></div>
    <h5 class="bg-light pl-3 pr-3">会員登録がお済みでない方</h5>
  </div>
  <div class="row">
    <div class="col-sm-8 offset-sm-2">
    <%= render "public/shared/links" %>
  </div>
</div>
