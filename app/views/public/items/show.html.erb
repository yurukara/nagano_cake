<div class='container'>
  <div class='row mt-4'>
    <%= render 'genrs_search', genres: @genres %>
    <%= form_with(model: @cart_item, url: cart_items_path, mehod: :post, local: true)do |f| %>
      <div class= 'col-10, ml-4  d-flex align-items-center'>
        <div style= 'display: inline-block;'>
          <div><%= image_tag @item.get_item_image(400,400) %></div>
        </div>
        <div style= 'display: inline-block;', class= 'p-3 m-3'>
        <div style= 'text-align: center;'>
          <h2 class= 'font-weight-bold m-1'><%= @item.name %></h2>
          <div><%= @item.introduction %></div>
          <div class= 'm-3 font-weight-bold'><span>¥</span><%= @item.with_tax_price.to_s(:delimited) %><span>(税込)</span></div>
          <div class= 'm-3'><%= f.select :quantity, *[1..50] %></div>
          <div><%= f.hidden_field :item_id, :value => @item.id %></div>
          <div><%= f.submit "カートに入れる", class: "btn btn-success"%></div>
      <% end %>
        </div>
        </div>
    </div>
  </div>
</div>

