<div class="container">
  <div class="row mt-5 ml-5 mb-3">
    <h4 class="bg-light pl-3 pr-3">新規会員登録</h4>
    <%= flash[:notice] %>
  </div>
  <div class="row">
    <table class="table table-sm table-borderless">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>
      <tr>
        <td class="align-middle" scope="col" style="width: 15%"><label>名前</label></td>
        <td class="align-middle" scope="col" style="width: 3%" ><%= f.label :last_name, '(姓)', class: 'align-middle' %></td>
        <td scope="col" style="width: 20%"><%= f.text_field :last_name, autofocus: true, placeholder: '令和', class: 'form-control' %></td>
        <td class="align-middle" scope="col" style="width: 3%"><%= f.label :first_name, '(名)', class: 'align-middle' %></td>
        <td scope="col" style="width: 20%"><%= f.text_field :first_name, autofocus: true, placeholder: '道子', class: 'form-control' %></td>
      </tr>
      <tr>
        <td class="align-middle"><label>フリガナ</label></td>
        <td class="align-middle"><%= f.label :last_name_kana, '(セイ)' %></td>
        <td><%= f.text_field :last_name_kana, autofocus: true, placeholder: 'レイワ', class: 'form-control' %></td>
        <td class="align-middle"><%= f.label :first_name_kana, '(メイ)' %></td>
        <td><%= f.text_field :first_name_kana, autofocus: true, placeholder: 'ミチコ', class: 'form-control' %></td>
      </tr>
      <tr>
        <td class="align-middle"><label>メールアドレス</label></td>
        <td></td>
        <td><%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'sample@example', class: 'form-control' %></td>
      </tr>
      <tr>
        <td class="align-middle"><label>郵便番号(ハイフンなし)</label></td>
        <td></td>
        <td><%= f.text_field :postal_code, autofocus: true, placeholder: '0000000', class: 'form-control' %></td>
      </tr>
      <tr>
        <td class="align-middle"><label>住所</label></td>
        <td></td>
        <td colspan="3"><%= f.text_field :address, autofocus: true, placeholder: '東京都渋谷区代々木神園町0-0', class: 'form-control' %></td>
      </tr>
      <tr>
        <td class="align-middle"><label>電話番号(ハイフンなし)</label></td>
        <td></td>
        <td><%= f.text_field :phone_number, autofocus: true, placeholder: '00000000000', class: 'form-control' %></td>
      </tr>
      <tr>
        <td class="align-middle"><label>パスワード(6文字以上)</label></td>
        <td></td>
        <td><%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %></td>
      </tr>
      <tr>
        <td class="align-middle"><label>パスワード(確認用)</label></td>
        <td></td>
        <td><%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %></td>
      </tr>
      <tr>
        <td></td>
        <td></td>
        <td><%= f.submit "新規登録", class: 'btn btn-success w-100' %></td>
      </tr>
    <% end %>
    </table>
  </div>
  <div class="row mt-2 ml-5 mb-2">
    <h5 class="bg-light pl-3 pr-3">既に登録済みの方</h5>
  </div>
  <div class="row">
    <div class="col-1"></div>
    <%= render "public/shared/links" %>
    </div>
  </div>
</div>