<h2>Sign up</h2>
<%= flash[:notice] %>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :last_name, '(姓)' %>
    <%= f.text_field :last_name, autofocus: true, placeholder: '令和' %>
  </div>

  <div class="field">
    <%= f.label :first_name, '(名)' %>
    <%= f.text_field :first_name, autofocus: true, placeholder: '道子' %>
  </div>

  <div class="field">
    <%= f.label :last_name_kana, '(セイ)' %>
    <%= f.text_field :last_name_kana, autofocus: true, placeholder: 'レイワ' %>
  </div>

  <div class="field">
    <%= f.label :first_name_kana, '(メイ)' %>
    <%= f.text_field :first_name_kana, autofocus: true, placeholder: 'ミチコ' %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'sample@example.com' %>
  </div>

  <div class="field">
    <%= f.label :postal_code, '郵便番号' %>
    <%= f.text_field :postal_code, autofocus: true, placeholder: '0000000' %>
  </div>

  <div class="field">
    <%= f.label :address, '住所' %>
    <%= f.text_field :address, autofocus: true, placeholder: '東京都渋谷区代々木神園町0-0' %>
  </div>

  <div class="field">
    <%= f.label :phone_number, '電話番号' %>
    <%= f.text_field :phone_number, autofocus: true, placeholder: '00000000000' %>
  </div>




  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<p>既に登録済みの方</p>
<%= render "public/shared/links" %>
