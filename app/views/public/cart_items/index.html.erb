<div class="container">

  <div class="row">
    <div class="col-lg-11 mx-auto">
      <h2>ショッピングカート</h2>
      <%= link_to 'カートを空にする', destroy_all_path, method: :delete, class: 'btn btn-danger' %>
    </div>
  </div>

  <div class="row">
    <table class="table">
      <thead>
        <tr>
          <th>商品名</th>
          <th>単価(税込)</th>
          <th>数量</th>
          <th>小計</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @cart_items.each do |cart_item| %>
        <tr>
          <td>
            <%= image_tag cart_item.item.get_item_image(100,50) %>
            <strong class="ml-5">
              <%= cart_item.item.name %>
            </strong>
          </td>
          <td>
            <%= (cart_item.item.with_tax_price).floor.to_s(:delimited) %>
          </td>
          <td>
            <%= form_with model: cart_item, url: cart_item_path(cart_item), method: :patch do |f| %>
            <!--selected:でquantityカラムに入っている値をセレクトフォームに代入します-->
              <%= f.select :quantity, options_for_select(*[1..50], {selected: cart_item.quantity.to_i}) %>
              <%= f.submit '変更', class: 'btn btn-success' %>
            <% end %>
          </td>
          <td><%= cart_item.subtotal.floor.to_s(:delimited) %></td>
          <td><%= link_to '削除', cart_item_path(cart_item), method: :delete, class: 'btn btn-danger' %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="row">
    <%= link_to '買い物を続ける', root_path, class: 'btn btn-primary' %>
    合計金額 <%= @total.to_s(:delimited) %>
  </div>

  <div class="row">
    <%= link_to '情報入力に進む', new_order_path, class: 'btn btn-success' %>
  </div>
</div>
