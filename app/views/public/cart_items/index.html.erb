<div class="container">

  <div class="row mt-5 mb-4">
    <div class="col-lg-3">
      <h4 class="bg-light pl-3 pr-3 text-center">ショッピングカート</h4>
    </div>
    <div class="col-lg-6 offset-sm-3 text-right">
      <%= link_to 'カートを空にする', destroy_all_path, method: :delete, class: 'btn btn-danger text-right' %>
    </div>
  </div>

  <div class="row">
    <table class="table table-bordered">
      <thead>
        <tr>
          <td>商品名</td>
          <td scope="col" style="width: 15%">単価(税込)</td>
          <td scope="col" style="width: 15%">数量</td>
          <td scope="col" style="width: 15%">小計</td>
          <td scope="col" style="width: 15%"></td>
        </tr>
      </thead>
      <tbody class="table-sm">
        <% @cart_items.each do |cart_item| %>
        <tr>
          <td>
            <%= image_tag cart_item.item.get_item_image(100,50) %>
            <strong class="ml-4">
              <%= cart_item.item.name %>
            </strong>
          </td>
          <td style="vertical-align: middle;">
            <%= (cart_item.item.with_tax_price).floor.to_s(:delimited) %>
          </td>
          <td class="text-center" style="vertical-align: middle;">
            <%= form_with model: cart_item, url: cart_item_path(cart_item), method: :patch do |f| %>
            <!--selected:でquantityカラムに入っている値をセレクトフォームに代入します-->
              <%= f.select :quantity, options_for_select(*[1..50], {selected: cart_item.quantity.to_i})%>
              <%= f.submit '変更', class: 'btn btn-success' %>
            <% end %>
          </td>
          <td style="vertical-align: middle;"><%= cart_item.subtotal.floor.to_s(:delimited) %></td>
          <td class="text-center" style="vertical-align: middle;"><%= link_to '削除', cart_item_path(cart_item), method: :delete, class: 'btn btn-danger pr-4 pl-4' %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="row mt-4">
    <div class="col-lg-3">
      <%= link_to '買い物を続ける', root_path, class: 'btn btn-primary' %>
    </div>
    <div class="col-lg-4 offset-lg-5">
      <table class="table table-bordered">
        <tr>
          <td>合計金額</td>
          <td><%= @total.to_s(:delimited) %></td>
        </tr>

      </table>
    </div>
  </div>

  <div class="row mt-4 justify-content-center">
    <%= link_to '情報入力に進む', new_order_path, class: 'btn btn-success btn-lg' %>
  </div>
</div>
